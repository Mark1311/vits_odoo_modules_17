<templates id="tracking_number_hide_pro" xml:space="preserve">
    <t t-name="tracking_number_hide_pro.ReceiptHeader" t-inherit="point_of_sale.ReceiptHeader"
       t-inherit-mode="extension" owl="1">
        <xpath expr="//span[contains(@class, 'tracking-number') and contains(@class, 'fs-1')]" position="replace">
            <t t-if="!this.env.services.pos.config.pos_hide_tracking_number">
                <span class="tracking-number fs-1" t-esc="props.data.trackingNumber"/>
            </t>
        </xpath>
    </t>
</templates>
