<odoo>
    <record id="view_pos_hide_tracking_number_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.pos_sale</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='restaurant_section']" position="after">
                <block title="POS Hide Tracking Number on Receipt">
                    <setting string="Hide Tracking Number"
                             help="When enabled, the tracking number will be hidden from the POS order receipt.
                                    When disabled, the tracking number will be shown on the order receipt.">
                        <field name="pos_hide_tracking_number"/>
                    </setting>

                    <setting string="Hide Powered by Odoo"
                             help="When enabled, the powered by odoo will be hidden from the POS order receipt.
                                    When disabled, the powered by odoo will be shown on the order receipt.">
                        <field name="pos_hide_powered_odoo"/>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
