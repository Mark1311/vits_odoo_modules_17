<templates id="vits_pos_hide_product_info.inherit_product_info" xml:space="preserve">
    <t t-name="vits_pos_hide_product_info.product_card_hide_info_icon"
       t-inherit="point_of_sale.ProductCard"
       t-inherit-mode="extension" owl="1">
        <xpath expr="//div[@class='product-information-tag']" position="replace">
            <t t-if="this.env.services.pos.config.enable_hide_info">
                <span></span>
            </t>
            <t t-else="">
                <div t-if="props.productInfo" class="product-information-tag" t-on-click.stop="props.onProductInfoClick"
                     t-att-class="{'red-tag' : props.showWarning}">
                    <i class="product-information-tag-logo fa fa-info" role="img" aria-label="Product Information"
                       title="Product Information"/>
                </div>
            </t>
        </xpath>
    </t>
</templates>