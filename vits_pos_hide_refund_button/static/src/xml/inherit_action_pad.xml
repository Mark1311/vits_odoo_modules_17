<templates id="vits_pos_hide_refund_button.inherit_actionpad_widget" xml:space="preserve">
    <t t-inherit="point_of_sale.ActionpadWidget"
       t-inherit-mode="extension" owl="1">
        <xpath expr="//button[contains(@class, 'pay-order-button') and @t-on-click='props.actionToTrigger']"
               position="replace">

            <t t-if="this.env.services.pos.config.hide_refund_button">
                <t/>
            </t>

            <t t-else="">
                <button class="pay pay-order-button button btn btn-primary btn-lg py-3 d-flex align-items-center justify-content-center flex-fill"
                        t-on-click="props.actionToTrigger"
                        t-esc="props.actionName"
                />
            </t>

        </xpath>
    </t>
</templates>