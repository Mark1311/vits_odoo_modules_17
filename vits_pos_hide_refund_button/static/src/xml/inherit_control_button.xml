<templates id="vits_pos_hide_refund_button.inherit_control_buttons" xml:space="preserve">
    <t t-name="vits_pos_hide_refund_button.inherit_control_buttons"
       t-inherit="point_of_sale.ControlButtons"
       t-inherit-mode="extension" owl="1">
        <xpath expr="//button[@t-on-click='() => this.clickRefund()']"
               position="replace">
            <t t-if="this.env.services.pos.config.hide_refund_button">
                <span></span>
            </t>
            <t t-else="">
                <button class="btn btn-secondary btn-lg py-5" t-on-click="() => this.clickRefund()">
                    <i class="fa fa-undo me-1" role="img" aria-label="Refund" title="Refund"/>
                    Refund
                </button>
            </t>
        </xpath>
    </t>
</templates>