<odoo>
    <record id="res_config_settings_view_form_inherit_show_code" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.show.default.code</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='website_info_settings']" position="after">
                <block title="Product Display Settings" id="product_display_settings">
                    <setting
                            id="show_default_code_setting"
                            string="Show Product Internal Reference"
                            help="Show Product Internal Reference On Product Page"
                    >
                        <field name="show_product_default_code"/>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>