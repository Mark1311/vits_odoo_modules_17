<odoo>
    <template id="product_template_page" inherit_id="website_sale.product" name="Product Detail Main Custom Content">
        <xpath expr="//h1[@itemprop='name']" position="after">
            <t t-if="request.env['ir.config_parameter'].sudo().get_param('website.show_product_default_code') == 'True'">
                <div id="variant_default_code"
                     class="text-muted"
                     style="font-size:16px; margin-top:4px;">
                    <t t-esc="product.product_variant_id.default_code"/>
                </div>
            </t>
        </xpath>
    </template>

    <template id="product_template_custom" inherit_id="website_sale.products_item">
        <xpath expr="//div[contains(@class,'o_wsale_product_information_text')]" position="inside">
            <t t-if="request.env['ir.config_parameter'].sudo().get_param('website.show_product_default_code') == 'True'">
                <div class="text-muted"
                     style="font-size:14px; margin-top:-6px; margin-bottom:4px;">
                    <t t-esc="product.product_variant_id.default_code"/>
                </div>
            </t>
        </xpath>
    </template>

</odoo>



